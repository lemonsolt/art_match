<div class="chat-container">
  <div class="chat-topbar">
    <h2><%= @user.name %> さんとのチャット</h2>
  </div>
  <div class="message">
    <%= render "artist/dms/messages", messages: @messages %>
  </div>

  <div class="chat-form">
    <%= form_with model: @message,url: dms_path, data: {remote: true} do |f| %>
      <%= f.text_field :message, placeholder: "メッセージを入力してください", autocomplete: "off" %>
      <%= f.hidden_field :dm_room_id, value: @room.id %>
      <%= f.submit "送信" %>
    <% end %>
  </div>
</div>
