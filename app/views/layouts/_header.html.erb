<header>
  <div class="container-fluid border-bottom">
    <div class="row">
      <nav class="navbar navbar-expand-lg navbar-light w-100">
        <div class="col-12 d-flex flex-wrap">
          <% if admin_signed_in? %>
            <%= render "layouts/headers/admin"%>
          <% elsif artist_signed_in? %>
            <%= render "layouts/headers/artist"%>
          <% elsif gallary_signed_in? %>
            <%= render "layouts/headers/gallary"%>
          <% else %>
            <%= render "layouts/headers/public" %>
          <% end %>
        </div>
      </nav>
    </div>
  </div>
</header>