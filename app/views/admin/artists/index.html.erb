<div class="container">
  <div class="row">
    <h4 class="text-center mx-auto pt-3">アーティスト一覧</h4>
  </div>
  <div class="row w-100 py-3 mb-4">
    <% @artists.each do |artist| %>
      <%= link_to admin_artist_path(artist), class: "row w-100 text-secondary" do %>
        <div class="col-10 border d-flex mx-auto my-1 py-1">
          <div class="col-2">
            <%= image_tag artist.artist_image_or_empty, size: "50x50"%>
          </div>
          <div class="col-7">
            作家名：<%= artist.name %>
          </div>
          <div class="col-3">
            公開状態：<%= artist.is_lock ? "非公開" : "公開中" %><br>
            アカウント状態：<%= artist.is_cold ? "凍結中" : "正常" %>
          </div>
        </div>
      <% end %>
    <% end %>
    <div class="row justify-content-center">
      <%= paginate @artists, outer_window: 3,data:{"turbolinks" =>false} %>
    </div>
  </div>
</div>