<%= form_with model: portfolio ,local: true,data:{"turbolinks" =>false} do |f| %>
  <div class="my-3">

    <% if controller.action_name == "new" %>
      <div class="field mt-4 mx-md-5 mx-0 center-block">
      <p>作品画像</p>
      <%= f.file_field :image, accept: "image/*"%>
      </div>
    <% elsif controller.action_name == "edit" %>
      <div class="row justify-content-center">
        <%= image_tag portfolio.image_or_empty,class: "portfolio_edit_image" %>
      </div>
    <% end %>

    <div class="field mt-4 mx-md-5 mx-0 center-block">
      <%= f.label :title, "タイトル" %><br>
      <%= f.text_field :title,class: "form-control" %>
    </div>

    <div class="field mt-4 mx-md-5 mx-0 center-block">
      <%= f.label :introduction, "詳細文" %><br>
      <%= f.text_area :introduction,class: "form-control"  %>
    </div>

    <div class="field mt-4 mx-md-5 mx-0 center-block">
      <%= f.label :item, "使用道具" %><br>
      <%= f.text_field :item,placeholder: "鉛筆、透明水彩",class: "form-control"  %>
    </div>

    <div class="field mt-4 mx-md-5 mx-0 ">
      <%= f.label "ジャンルタグ ( ,で区切ると複数タグ登録できます)" %>
      <%= f.text_field :name, placeholder: "カテゴリ",value: @genre_list,class: "form-control"%>
    </div>

    <div class="form-group text-center my-3">
      <% if controller.action_name == "edit" %>
        <%= f.submit "変更する", class: 'btn btn-success px-5' %>
      <% else %>
        <%= f.submit "投稿する", class: 'btn in_btn px-5' %>
      <% end %>
    </div>
  </div>
<% end %>