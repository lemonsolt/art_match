<div class="container">
  <div class="row w-100">
    <h4 class="text-center mx-auto pt-3">ブックマーク一覧</h4>
  </div>
  <div class="row">
    <div class="col-10 mx-auto">
      <% @bookmarks.each do |bookmark| %>
        <% event = GallaryEvent.find_by(id: bookmark.gallary_event_id) %>
        <%= link_to gallary_event_path(event.id),data:{"turbolinks" =>false},class: "text-secondary" do %>
          <div class="col-12 d-flex flex-wrap border p-3 my-3">
            <div class="col-lg-2 col-md-3 col-sm-4 col-12">
              <%= image_tag event.image_or_empty, class: "d-block mx-auto mini_image" %>
            </div>
            <div class="col-sm-8 col-12">
              <div class="row">
                <h5>
                  <%= event.title %>
                </h5>
              </div>
              <div class="row">
                <h6>
                  <%= event.gallary.name %>
                </h6>
              </div>
              <div>
                <%= event.start_at %> ~ <%= event.end_at%>
              </div>
              <div class="text-right">
                <%= event.recruit %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= paginate @bookmarks, outer_window: 3 %>
  </div>
</div>