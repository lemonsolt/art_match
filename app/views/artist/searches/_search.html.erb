<div class="container pt-5">
  <div class="row ">
    <div class="col-lg-4 col-12">
      <h4><%= "#{keyword}の検索結果" %><span style= font-size:20px>(全<%= all_gallary.count %>件)</h4>
    </div>
  </div>
  <div class="row w-100">
    <div class="col-11 offset-1 d-flex flex-wrap mt-4">
      <% page.each do |gallary| %>
        <%= link_to gallary_path(gallary.id),data:{"turbolinks" =>false},class: "text-secondary col-12 d-flex border py-3 my-1" do%>
          <div class="col-2">
            <p><%= image_tag gallary.image_or_empty, size: '100x100' %></p>
          </div>
          <div class="col-10">
            <p>
              <%= gallary.name %>
              <% if gallary.is_lock %>
                <i class="fa-solid fa-lock fa-sm" style="color: #4682b4;"></i>
              <% end %>
            </p>
            <p>〒 <%= gallary.post_code %></p>
            <p><%= gallary.address %></p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= paginate page, outer_window: 3 %>
  </div>
</div>
  <!--代入させる部分＝keyword,all,page-->