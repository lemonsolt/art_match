<div class="container">
  <div class="row py-3">
    <h4>イベント詳細</h4>
  </div>
  <div class="row">
    <div class="col-10 mx-auto border mb-4">
      <div class="row mt-3">
        <div class="col-12 d-flex flex-wrap">
          <div class="col-md-4 col-12">
            <%= image_tag @event.image_or_empty ,class: "d-block mx-auto index_image"%>
          </div>
          <div class="col-md-6 my-auto">
            <div class="row d-flex">
              <h3>
                <%= @event.title%>
              </h3>
              <p id="event_bookmark_buttons_<%= @event.id %>" class="mt-2 ml-2">
                <%= render 'gallary/event_bookmarks/bookmark', event: @event %>
              </p>
            </div>
            <%= link_to gallary_path(@gallary),data:{"turbolinks" =>false},class: "text-secondary" do %>
              <h4><%= @event.gallary.name %></h4>
            <% end %>
            <h4><%= @event.start_at %> ~ <%= @event.end_at %></h4>
            <h4><%= @event.recruit%></h4>
          </div>
          <div class="col-md-2 col-12">
            <% if gallary_signed_in? && @event.gallary_id == current_gallary.id %>
              <div>
                <%= link_to "編集する", edit_gallary_event_path(@event.id),data:{"turbolinks" =>false}, class: "btn btn-success mb-1" %>
              </div>
              <div>
                <%= link_to "削除する", gallary_event_path(@event.id), method: :delete, "data-confirm" => "本当に削除しますか？",data:{"turbolinks" =>false}, class: "btn btn-danger"%>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="row　w-100">
        <div class="col-10 mx-auto">
          <h5 class="py-3">イベント詳細</h5>
          <%= safe_join(@event.introduction.split("\n"),tag(:br)) %>
        </div>
      </div>
    </div>
  </div>
</div>