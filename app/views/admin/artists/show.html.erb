<div class="container">
  <div class="row w-100 py-3">
    <div class="col-8 mx-auto text-right">
      <%= link_to "ステータス変更", edit_admin_artist_path(@artist),class: "btn btn-info" %>
    </div>
  </div>
  <div class="row w-100 py-3 my-4">
    <div class="col-9 mx-auto d-flex">
      <div class="col-3">
        <%= image_tag @artist.artist_image_or_empty, class: "mini_image" %>
      </div>
      <div class="col-9">
        <%= @artist.name %><br>
        <%= safe_join(@artist.introduction.split("\n"),tag(:br)) %><br>
        公開状態：<%= @artist.is_lock ? "非公開" : "公開中" %>,
        アカウント状態：<%= @artist.is_cold ? "凍結中" : "正常" %>
      </div>
    </div>
  </div>
  <div class="row ">
    <div class="col-9 mx-auto">
      <div class="row border-bottom mb-4">
        <h3>ポートフォリオ</h3>
      </div>
      <div class="row d-flex flex-wrap">
        <% @portfolios.each do |portfolio| %>
          <div class="col-3 d-flex">
            <%= link_to portfolio_path(portfolio.id),class: "text-secondary" do %>
              <div class="col-12 border px-4 py-3 my-2">
                <div class="row">
                  <%= image_tag portfolio.image_or_empty, size: "200x200" %>
                </div>
                <div class="row">
                  <h5>
                    <%= portfolio.title %>
                  </h5>
                </div>
                <div class="row">
                  <h6>
                    <%= portfolio.artist.name %>
                  </h6>
                </div>
                <div>
                  <i class="fa-solid fa-tag" style="color: #4682b4;"><%= portfolio.genres.map(&:name).join(', ') %></i>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>